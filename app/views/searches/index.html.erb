<div class="row">
	<div class="span10">
<h1>New Search</h1>

<%= form_tag searches_path, method: 'get', class:'form-search' do %>
  <p>
	  <%= text_field_tag :search, params[:search], class: "input-medium search-query" %>
	  <%= submit_tag "Search", name: nil, class: 'btn' %>
  </p>
<% end %>


<% @searches.each do |r| %>
	<%= r["title"] %><br>
	<%= r["year"] %><br>
	<%= r["plot_simple"]%><br>
	<%= r["genres"].to_sentence %><br>
	
	<%= image_tag r["poster"] %><br>
<% end %>

<% @searches %>
</div>
<div class="span2">

<%= link_to 'Add Movie to library', '#', class: "btn btn-warning" %>	

<%= simple_form_for(@movie, :url => { :action => "create" }) do |f| %>
    <%= f.input :title, :as => :hidden, :input_html => { :value => "Skyfall" } %>
    <%= f.input :year, :as => :hidden, :input_html => { :value => "2012" } %>
    <%= f.input :description, :as => :hidden, :input_html => { :value => "James Bond" } %>
	<%= f.association :genres, include_blank: false, :as => :hidden, :input_html => { :value => "some value" } %>
    <%= f.button :submit, class: "btn btn-warning" %>
<% end %> 
	
</div>
</div>

<%= link_to 'Back to Movies', root_path, class: "btn btn-warning" %>